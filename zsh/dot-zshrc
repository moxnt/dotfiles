# =====================================  starship  =====================================

eval "$(starship init zsh)"

# =====================================    env     =====================================
export EDITOR=nvim


# =====================================    path    =====================================
export PATH=$PATH:$HOME/.cargo/bin
# pnpm
#
export PNPM_HOME="$HOME/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
